<h1>Cars</h1>

<br>
<%= link_to 'New Car', new_car_path %><br>
<br>
<%= form_tag(search_cars_url, method: "get") do %>
  <%= label_tag( :query, "Search cars:") %>
  <%= text_field_tag :query, params[:query], data: {
      autocomplete: autocomplete_cars_model_cars_path } %>
  <%= submit_tag("Search") %>
<% end %>
<br>

<div id="results"></div>

<script>
    var QueryURL = "http://localhost:3000/cars/search.json?query=";
    var ResultsDiv = "results";
    var Field = "model";
    var QueryTag = "query";
</script>

<script type = "text/javascript" src = "/javascripts/AJAXSearch.js"></script>

<table>
  <thead>
    <tr>
      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      <th>Vin</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.make.name %></td>
        <td><%= car.model %></td>
        <td><%= car.year %></td>
        <td><%= car.VIN %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

